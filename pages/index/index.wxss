/**index.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
  background-color: #D1EEEE;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #5B5B5B;
}

.usermotto {
  font-size: 16px;
  margin-top: 200px;
  padding: 2px 5px;
  border: 1px solid #CD3333;
}

.user-motto{
  color: #CD3333;
}

page {
  background-color: #D1EEEE
}